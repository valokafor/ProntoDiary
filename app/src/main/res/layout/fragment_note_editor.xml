<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_tiny">

        <FrameLayout
            android:id="@+id/attachment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/attachment_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </FrameLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/detail_content_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="2dp">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="outsideOverlay">


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_padding_tiny"
                    android:paddingLeft="@dimen/margin_padding_tiny"
                    android:paddingRight="@dimen/margin_padding_tiny">

                    <RelativeLayout
                        android:id="@+id/toplayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="@dimen/margin_padding_tiny"
                        android:paddingLeft="@dimen/margin_padding_tiny"
                        android:paddingTop="@dimen/margin_padding_tiny">

                        <EditText
                            android:id="@+id/edit_text_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/margin_padding_tiny"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/ic_action_folder_open"
                            android:drawablePadding="@dimen/activity_horizontal_margin"
                            android:focusable="false"
                            android:hint="@string/select_folder"
                            android:textSize="@dimen/text_size_xnormal" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />


                    <RelativeLayout
                        android:id="@+id/toplayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="@dimen/margin_padding_tiny"
                        android:paddingLeft="@dimen/margin_padding_tiny"
                        android:paddingTop="@dimen/margin_padding_tiny">

                        <EditText
                            android:id="@+id/edit_text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/margin_padding_tiny"
                            android:background="@android:color/transparent"
                            android:hint="@string/placeholder_journal_title"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:textSize="@dimen/text_size_xnormal" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />


                    <RelativeLayout
                        android:id="@+id/toplayout_note"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/margin_padding_tiny"
                        android:paddingLeft="@dimen/margin_padding_tiny"
                        android:paddingTop="@dimen/margin_padding_tiny">


                        <EditText
                            android:id="@+id/edit_text_note"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_padding_tiny"
                            android:background="#00000000"
                            android:gravity="left|top"
                            android:hint="@string/placeholder_journal_text"
                            android:inputType="textMultiLine"
                            android:minHeight="100dp"
                            android:scrollbars="none"
                            android:textSize="@dimen/text_size_normal" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/image_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:contentDescription="@string/image_attachment"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/sketch_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:background="@null"
                        android:contentDescription="@string/image_attachment"
                        android:visibility="gone" />

                </LinearLayout>
            </ScrollView>


        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/timestap_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/creation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|start"
                android:padding="0dp"
                android:text="Updated Today"
                android:visibility="gone"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/last_modification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="0dp"
                android:text="Modified Today"
                android:visibility="gone"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/bottom_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/image_button_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_padding_small"
                android:background="@null"
                android:src="@drawable/ic_sort_white_24dp" />

            <ImageButton
                android:id="@+id/image_button_record"
                android:layout_width="@dimen/note_editor_icon_size"
                android:layout_height="@dimen/note_editor_icon_size"
                android:layout_margin="@dimen/margin_padding_small"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_mic_white_24dp" />

            <ImageButton
                android:id="@+id/image_button_play"
                android:layout_width="@dimen/note_editor_icon_size"
                android:layout_height="@dimen/note_editor_icon_size"
                android:layout_margin="@dimen/margin_padding_small"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_play_arrow_white_24dp" />

            <ImageButton
                android:id="@+id/image_button_camara"
                android:layout_width="@dimen/note_editor_icon_size"
                android:layout_height="@dimen/note_editor_icon_size"
                android:layout_margin="@dimen/margin_padding_small"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_photo_camera_white_24dp" />


        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
