<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
             tools:context="com.okason.diary.ui.settings.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_small"
            android:gravity="left">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/toolbar_profile_image"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_marginLeft="@dimen/margin_padding_small"
                android:layout_marginRight="@dimen/margin_padding_small"
                android:src="@drawable/person_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/toolbar_profile_note_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:text="0 Notes"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic|bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/margin_padding_small">

            <Button
                android:id="@+id/toolbar_button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/label_login"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="@dimen/margin_padding_small"/>

            <Button
                android:id="@+id/toolbar_button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/label_logout"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Colored"
                android:visibility="gone"
                android:padding="@dimen/margin_padding_small"/>

            <!--<ImageButton-->
                <!--android:id="@+id/toolbar_button_delete"-->
                <!--android:layout_width="@dimen/margin_padding_xxnormal"-->
                <!--android:layout_height="@dimen/margin_padding_xxnormal"-->
                <!--android:layout_marginLeft="@dimen/margin_padding_small"-->
                <!--android:layout_marginRight="@dimen/margin_padding_small"-->
                <!--android:background="@null"-->
                <!--android:padding="@dimen/margin_padding_small"-->
                <!--app:srcCompat="@drawable/ic_delete_forever"/>-->

            <!--<ImageButton-->
                <!--android:id="@+id/toolbar_button_settings"-->
