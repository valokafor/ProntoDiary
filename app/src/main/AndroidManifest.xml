<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okason.diary">

    <application
        android:name=".core.ProntoDiaryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".NoteListActivity"
            android:label="@string/title_activity_note_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.AuthUiActivity"
            android:label="@string/title_activity_auth_ui"
            android:parentActivityName=".NoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.okason.diary.NoteListActivity" />
        </activity>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName=".NoteListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.okason.diary.NoteListActivity" />
        </activity>


        <service
            android:name=".core.services.AddSampleDataIntentService"
            android:exported="false" />

        <service
            android:name=".core.services.C"
            android:exported="false" />

        <activity android:name=".ui.auth.SignedInActivity"></activity>
    </application>

</manifest>